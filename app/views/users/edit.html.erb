<% provide(:title, "Edit user") %>
<h1>Actualiza tu perfil</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :Nombre %>
      <%= f.text_field :name %>

      <%= f.label :Correo %>
      <%= f.text_field :email %>

      <%= f.label :Contraseña %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmar Contraseña" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Guardar cambios", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for(@user) %>
    <a href="http://gravatar.com/emails">Cambiar</a>
  </div>
</div>
